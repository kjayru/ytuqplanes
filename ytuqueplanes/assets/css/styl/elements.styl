/* Box */
.box
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 20
	background-color rgba(0,0,0,.5)
	color #283342
	font-family f-book
	overflow auto
	display none
	opacity 0

	p
		padding 5px 0
		line-height 1.6

	a
		color celeste

	&__inset
		width 100%
		min-height 100%
		padding 25px
		display flex
		align-items center
		justify-content center

	&__contenido
		display block
		padding 40px 75px
		background-color #fff
		box-shadow 0 2px 18px 0 rgba(130, 130, 130, 0.5)
		max-width 800px
		width 100%
		border-radius 18px
		position relative
		z-index 2
		&.m--center
			text-align center

	&__cerrar
		position absolute
		top 25px
		right 30px
		cursor pointer
		transition transform ease .25s

		&:hover
			transform scale(1.1)

	&__logo
		margin 0 auto 35px

	&__titulo
		font-family f-bold
		font-size 1.375rem
		text-align center
		display block
		padding-bottom 20px

	.boton
		margin-top 50px

	&.-activo-
		display block
		animation boxIn ease .25s .1s forwards
		.box__contenido
			animation boxContentIn ease .35s forwards

	@media (max-width 700px)
		&__inset
			padding 15px
		&__contenido
			padding 40px

	@media (max-width 540px)

		&__logo
			width 70px
			margin-bottom 20px
		&__titulo
			padding-bottom 10px
			font-size 1.25rem
		&__contenido
			padding 25px
		&__cerrar
			top 20px
			right 20px
			width 25px
		.boton
			margin-top 25px

@keyframes boxIn
	0%
		opacity 0
	100%
		opacity 1

@keyframes boxContentIn
	0%
		opacity 0
		transform translate(0,50px)
	100%
		opacity 1
		transform translate(0,0)


