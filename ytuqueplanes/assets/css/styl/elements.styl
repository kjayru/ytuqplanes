.boton
	display inline-flex
	font-family f-medium
	text-align center
	padding 0 55px
	overflow hidden
	position relative
	cursor pointer
	transition background-color ease 0.25s
	border 0

	align-items center
	justify-content center

	&:before
		content ''
		display block
		width 0
		height 0
		border-radius 50%
		position absolute
		z-index 1
		top 50%
		left 50%
		background-color inherit
		transform translate(-50%, -50%)
		transition all ease .5s

	strong
		position relative
		z-index 2
		animation menuItemOut ease 0.35s forwards
		color #fff

	&:hover
		&:before
			width 400px
			height 400px
		strong
			animation menuItemIn ease 0.45s forwards

	&-contenedor
		width 100%
		display flex
		justify-content center

		&.m--padding-top
			padding-top 20px

	&.m--grande
		min-height 53px
		border-radius 24px
		font-size 1.125rem

	&.m--mediano
		min-height 40px
		border-radius 20px
		font-size 1rem

	&.m--pequeno
		min-height 32px
		border-radius 16px
		font-size 0.75rem

	&.m--235
		width 235px
		padding 0
	&.m--148
		margin 0 auto
		display flex
		width 148px
		padding 0 10px

	&.m--camara
		vertical-align middle
		margin-left 10px
		strong
			font-size 0.9rem
		i
			color #fff
			font-size 1.3rem
			margin-right 5px
			vertical-align bottom
			position relative
			z-index 2

	&.m--padding-pequeno
		padding 0 30px

	&.m--verde
		background-color verde
		&:hover:before
			background-color verdeOscuro

	&.m--crema
		background-color crema
		&:hover:before
			background-color cremaOscuro

	&.m--verde-hoja
		background-color verdeHoja
		&:hover:before
			background-color verdeHojaOscuro

	&.m--amarillo
		background-color amarillo
		&:hover:before
			background-color amarilloOscuro

	&.m--morado
		background-color morado
		&:hover:before
			background-color moradoOscuro

	&.m--wsp
		background-color #77b822
		i
			font-size 1.3rem
			margin-right 5px
			vertical-align middle
		&:hover
			background-color #77b822

	&.m--filtro, &.m--filtro.m--morado
		background-color #fff
		border 1px solid #a2a2a2
		opacity 0.6
		cursor pointer
		&:before
			background-color #fbfbfb
		strong
			color #a2a2a2
			font-size 1rem
			line-height 1
		&:hover
			opacity 1
			border-color verde
			strong
				color verde
		&.-activo-, &.-activo-:hover
			opacity 1
			background-color verde
			border-color verde
			&:before
				background-color verde
			strong
				color #fff
		&.m--filtro.m--morado
			&:hover
				border-color morado
				strong
					color morado
			&.-activo-, &.-activo-:hover
				background-color morado
				border-color morado
				&:before
					background-color morado
				strong
					color #fff


	@media (max-width 600px)
		&.m--grande
			font-size 1rem

/* Filtro selector */
.filtro-selector
	padding-bottom 50px
	.boton
		margin-right 10px
		padding 0 30px

	&__boton
		&[hidden]
			display none

	&__select-ui
		display none
		width 280px
		padding 0 25px

		&:after
			content ''
			display block
			width 13px
			height 7px
			background-image url('../images/icono_select.svg')
			position absolute
			top 50%
			margin-top -3.5px
			right 23px
			z-index 2

		&__select
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			border 0
			opacity 0
			z-index 3
			font-family f-book
			outline none
			padding 0 10px

	@media (max-width 900px)
		.boton
			display none
		.filtro-selector__select-ui
			display flex
			margin 0 auto


/* Slider Principal */
.sliders
	height 100%
	max-height 720px
	min-height 470px

	&__nav
		position absolute
		bottom 59px
		right 15px
		z-index 2

		display flex
		justify-content center
		align-items center

		@media (max-width 600px)
			width 100%
			right 0
			bottom 15px

		&__items
			display flex
			align-items center

		&__item
			width 31px
			height 31px
			line-height 31px
			border 1px solid #fff
			opacity 1
			background none
			border-radius 0
			border-top-left-radius 10px
			border-bottom-right-radius 10px
			color #fff
			text-align center
			font-size 1rem
			// font-family f-news
			margin-right 14px
			cursor pointer
			outline none
			transition color ease .25s, background-color ease .25s

			&:hover, &.swiper-pagination-bullet-active
				background-color #fff
				color verde

		&__space
			width 1px
			height 31px
			background-color #fff
			margin-right 14px

		&__play
			overflow hidden
			cursor pointer
			height 16px
			width 12px
			position relative

			&:before
			&:after
				content ''
				display block
				width 3px
				height 16px
				background-color #fff
				position absolute
				transition all ease .25s
			&:before
				left 0

			&:after
				right 0

			&.-active-
				&:before
					width 16px
					height 16px
					margin-right 0
					transform translate(-7px) rotate(45deg)
					transform-origin 50% 50%
				&:after
					opacity 0
					transform scale(0)

.slider
	height 100%
	padding-top 78px
	color #fff
	background #ddd no-repeat center center / cover
	position relative

	display flex
	align-items center

	&:before
		content ''
		display block
		background linear-gradient(to right, rgba(0,0,0,.4), rgba(0,0,0,0))
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	&__ubicacion
		display inline-block
		padding 4px 8px
		// height 25px
		line-height 1
		border-radius 9px
		background-color rgba(255,255,255,0.8)
		color azulClaro
		font-size 0.81rem
		margin-bottom 8px

		animation sliderContenidoOut .65s ease forwards
		animation-delay .1s

		i
			margin-right 5px
			font-size 1rem

	&__titulo
		font-size 2.25rem
		font-family f-bbold
		animation sliderContenidoOut .6s ease forwards
		animation-delay .15s

		@media (max-width 600px)
			font-size 1.8rem

	&__contenido
		font-family f-medium
		line-height 1.4
		letter-spacing 0.5px
		margin 10px 0 30px
		max-width 500px
		animation sliderContenidoOut .55s ease forwards
		animation-delay .2s
		@media (max-width 600px)
			margin 10px 0 18px

	.boton
		animation sliderContenidoOut .5s ease forwards
		animation-delay .25s

	&.swiper-slide-active
		.slider
			&__ubicacion
				animation sliderContenidoIn .65s ease .1s forwards
			&__titulo
				animation sliderContenidoIn .6s ease .15s forwards
			&__contenido
				animation sliderContenidoIn .55s ease .2s forwards
		.boton
			animation sliderContenidoIn .5s ease .25s forwards

	@media (max-width 810px)
		padding-top 44px

@keyframes sliderContenidoIn
	0%
		opacity 0
		transform translateY(40px)
	100%
		opacity 1
		transform translateY(0)

@keyframes sliderContenidoOut
	0%
		opacity 1
		transform translateY(0)
	60%
		opacity 0
	100%
		opacity 0
		transform translateY(-40px)

