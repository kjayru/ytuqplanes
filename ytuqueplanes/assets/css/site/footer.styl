.footer
	background-color #f9f9f9
	padding-top 42px

	&.m--mapa
		margin 40px 0 0 -40px
		width calc( 100% + 80px)

	&__contenido
		display flex

	&__bloque
		flex 1
		text-align left

		&.m--enlaces
			flex 0 1 220px
			padding-right 10px
			// background-color red

		&.m--botones
			flex 0 0 350px
			// background-color green
			margin 0 auto

		&.m--redes
			flex 0 1 320px
			// background-color blue

	&__titulo
		font-family f-bold
		font-size 0.875rem
		padding-bottom 20px

		&.m--top
			margin-top 20px

	&__lista
		display flex
		flex-direction column
		justify-content space-between
		height calc(100% - 36px)
		&__enlace
			color rgba(0,0,0,.5)
			font-size 0.75rem
			&:hover
				color verde

	&__peru
		margin-left 10px
		display inline-block
		vertical-align middle

	&__redes-wrap
		display flex
		flex-direction column
		justify-content space-between
		height calc(100% - 36px)

	&__redes
		width 230px

		display flex
		justify-content space-between
		&__enlace
			display block
			width 27px
			height 27px
			border-radius 50%
			color #fff
			font-size 1rem
			transition all ease .25s

			display flex
			align-items center
			justify-content center

			&:hover
				transform translateY(-2px)
				box-shadow 0 5px 3px rgba(0,0,0,.4)

			&.m--facebook
				background-color #0E70B9
			&.m--twitter
				background-color #3BA8FC
			&.m--instagram
				background-color #ADAFAF
			&.m--youtube
				background-color #E02020
			&.m--spotify
				color #77B822
				font-size 2rem

	&__logos
		display flex
		align-items center

		img:first-child
			margin-right 5px

		&__separador
			width 1px
			height 42px
			background-color #d8d8d8
			margin auto

	&__separador
		border 0
		border-top 1px solid #E0E0E0
		margin 30px 0 0

	&__inferior
		font-size 0.75rem
		padding 11px 15px 9px

		display flex
		justify-content space-between

		&__lista
			flex-basis 500px

			display flex
			justify-content space-between

		&__enlace
			color rgba(0,0,0,.5)
			&:hover
				color verdeOscuro

		&__copyright
			font-family f-news
			color rgba(0,0,0,.5)
			span
				font-family f-medium
				font-weight bold

	@media (max-width 1650px)

		&.m--mapa
			.footer
				&__contenido
					flex-direction column

				&__bloque
					text-align center

					&.m--botones
						order 0
						flex auto
					&.m--enlaces
					&.m--redes
						order 1
						flex auto
					&.m--enlaces
						padding 30px 0 25px

				&__redes-wrap
					align-items center

				&__lista
					li
						padding 3px 0

				&__logos
					padding-top 15px
					max-width 300px
					width 100%

				&__inferior
					flex-direction column-reverse
					align-items center

					&__lista
						padding-top 15px
						flex 1
						max-width 400px
						width 100%

	@media (max-width 870px)

		&__contenido
			flex-direction column

		&__bloque
			text-align center

			&.m--botones
				order 0
				flex auto
			&.m--enlaces
			&.m--redes
				order 1
				flex auto
			&.m--enlaces
				padding 30px 0 25px

		&__redes-wrap
			align-items center

		&__lista
			li
				padding 3px 0

		&__logos
			padding-top 15px
			max-width 300px
			width 100%

		&__inferior
			flex-direction column-reverse
			align-items center

			&__lista
				padding-top 15px
				flex 1
				max-width 400px
				width 100%

	@media (max-width 370px	)
		.boton
			width 190px

		&__inferior
			font-size 0.7rem

.wrapper-first-right-list-item .wflitem-activity-list li img
	margin auto

@media (max-width 979px)
	.wrapper-navbar-container
		padding 20px 15px
	.wrapper-first-right-container
		padding 0 15px
	.wrapper-first-right-header
		padding-top 20px
	.footer
		&.m--mapa
			margin 30px 0 0 -15px
			width calc( 100% + 30px)