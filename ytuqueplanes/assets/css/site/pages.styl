		font-family f-book
		max-width 820px
		margin 0 auto
		text-align justify
		h2, h3, h4, h5, h6
			font-size 1.3rem
			padding-top 10px
			font-family f-bold
		p, li
			line-height 1.4
			padding 10px 0
			margin 0 !important
		ul, li
			margin 0 !important
		strong
			font-weight 600
		a
			color celeste
			font-family f-bold
			&:hover
				text-decoration underline
		img
			max-width 100%
			height auto !important
			margin auto
