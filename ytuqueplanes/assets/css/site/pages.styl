			font-size 1.3rem
			font-family f-book
			cursor pointer
			display none
			span
				width 50px
				height 50px
				border 1px solid gris
				border-radius 50%
				display inline-flex
				align-items center
				justify-content center
				transform scaleX(-1)
		&__redes
			color #fff
			width 36px
			height 36px
			border-radius 50%
			font-size 1.25rem
			display flex
			align-items center
			justify-content center
			margin-left 10px
			transition all ease .25s
			&:hover
				transform translateY(-2px)
				box-shadow 0 5px 3px rgba(0,0,0,.4)
			&.m--facebook
				background-color #4d82c8
			&.m--twitter
				background-color #00bef1
			&.m--wsp
				background-color #00b27e
				font-size 1.4rem
				i
					margin-right -2.5px
			&.m--share
				background-color #fff
				img
					width 30px
					height 30px
				&:hover
					transform translateY(0)
					box-shadow none

		&.m--full
			h2, h3, h4, h5, h6
				font-size 1.2rem
				padding-top 15px
			ul
				padding-left 25px
			li
				list-style disc

	&__subtitulo
	&__subtitulo-mobile
		color amarillo
		font-size 1.875rem
		font-family f-bold
		display block
		text-align center
		padding-bottom 30px
		&.m--gris
			color gris
	&__subtitulo-mobile
		display none

	@media (max-width 900px)
		&__festividad-detalle
			&__imagen
				width 400px
			&__contenido
				padding-left 20px

	@media (max-width 810px)
