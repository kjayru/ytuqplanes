			font-size 1.75rem
			padding 3px 0
			color #787878
		&__fecha
			font-size 1.25rem
			text-transform uppercase
		&__slider
			margin 20px 0
			position relative
			.swiper-container
				width 100%
				height 366px
				box-shadow 8px 10px 35px 0 rgba(0, 0, 0, 0.22)
				border-radius 12px
				img
					width 100%
					height 100%
					object-fit cover
			.swiper-pagination
				position static
				width 100%
				text-align center
				left 0
				padding-top 15px
			.swiper-pagination-bullet
				margin 0 5px
				width 11px
				height 11px
				background-color #d8d8d8
				opacity 1
				cursor pointer
				outline none
				&.swiper-pagination-bullet-active
					background-color #636363
			&__flecha
				width 10px
				height 40px
				position absolute
				top 50%
				margin-top -20px
				cursor pointer
				outline none
				&:before, &:after
					content ''
					display block
					width 2px
					height 20px
					background-color amarillo
					position absolute
					left 5px
				&:before
					top 1px
					transform rotate(25deg)
				&:after
					bottom 1px
					transform rotate(-25deg)
				&.m--left
					left -30px
				&.m--right
					right -30px
					transform rotate(-180deg)
				&.swiper-button-disabled
					&:after, &:before
						background-color #ccc
