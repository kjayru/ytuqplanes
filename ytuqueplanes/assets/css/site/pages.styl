.page

	&__header
		height 480px
		width 100%
		padding-top 120px
		color #fff
		background #ccc no-repeat center center / cover

		&__inset
			position relative
			min-height 100%
			display flex
			flex-direction column
			justify-content center
			align-items center

		&__miga-de-pan
			color #fff
			font-size 0.95rem
			font-family f-bold
			position absolute
			top 0
			left 15px
			display flex
			align-items center
			span
				padding-left 10px
				text-shadow 0 1px 1px rgba(0,0,0,.75)

		&__titulo
			font-size 3rem
			font-family f-bold
			padding 0 0 15px
			text-shadow 0 3px 5px rgba(0,0,0,0.25)
			text-align center

		&__resumen
			max-width 570px
			text-align center
			b, strong
				font-family f-bold
				font-size 1.06rem

		&__form
			position relative
			width 100%
			max-width 420px
			height 52px
			background-color #fff
			border-radius 52px

			&__input
				width 200px
				height 100%
				border 0
				padding 0 20px
				background-color transparent

			&__selector
				position absolute
				top 0
				right 0
				height 100%
				padding 0 20px

				display flex
				align-items center
				justify-content flex-end

				&__select
					position absolute
					top 0
					right 0
					width 100%
					height 100%
					opacity 0
					outline none

				&__contenido
					color morado
					font-family f-bbold
					line-height 1
					&:after
						content ' >'

				&__boton
					display none

		&__bg-animado
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			overflow hidden
			z-index 0
			&__imagen
				object-fit cover
			&__slider
				animation bgAnimado linear 12s infinite

			@keyframes bgAnimado
				0%, 2%
					transform scale(1)
				50%, 54%
					transform scale(1.1)
				98%, 100%
					transform scale(1)

		&.m--ofertas
			.page__header
				&__inset
					align-items flex-start
				&__titulo
					font-size 2.3rem
					text-align left

		&.m--destinos-nivel-4
			.page__header__titulo
				font-size 2.25rem

		&.m--blog
			.page__header
				&__titulo
					font-size 2.625rem
				&__subtitulo
					font-size 1.25rem
					font-family f-bold
					text-transform uppercase
					padding 20px 0 15px
					text-align center
			.filtro-selector__select-ui
				display flex

		&.m--limpio
			background-color #fff
			height 140px
			.page__header__miga-de-pan
				color verde
				span
					text-shadow none
			&.m--resultados
				height fit-content
			&.m--404
				background none

		&.m--bg-black
			position relative
			&:before
				content ''
				width 100%
				height 100%
				background-color rgba(0,0,0,.25)
				position absolute
				top 0
				left 0

	@media (max-width 810px)

		&__header
			padding-top 65px
			height 400px

			&.m--ofertas
				.page__header__titulo
					font-size 2rem

			&.m--limpio
				height 70px

	@media (max-width 680px)

		&__header
			&__titulo
				font-size 2.5rem
			&.m--destinos-nivel-4
				.page__header__titulo
					font-size 1.85rem

	@media (max-width 500px)

		&__header

			&__titulo
				font-size 2rem

			&.m--ofertas
				.page__header__titulo
					font-size 1.6rem
			&.m--destinos-nivel-4
				.page__header__titulo
					font-size 1.6rem

@media (max-width 1200px)
	.seccion.m--slider-standard
		.destinos__detalle__slider__flecha
			display none



