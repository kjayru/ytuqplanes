volverAmarillo = #f0b127
volverRojo = #e13b3d
volverRojoOscuro = #D22020
volverVerde = #77b822

.volver

	&__titulo
		font-size 32px
		color #fff
		display block
		font-family f-bbold
		max-width 840px
		letter-spacing 1px
		text-align center
		margin 0 auto 60px

	&__link-rojo
		display inline-flex
		align-items center
		background-color volverRojo
		color #fff
		font-size 10px
		height 28px
		border-radius 14px
		padding 0 20px
		transition all ease .25s
		&:hover
			background-color volverRojoOscuro

	&__seccion
		padding 60px 0

	&__banner-principal
		padding 60px 0 40px
		height 565px
		min-height fit-content
		background url('../images/rutas-cortas-3.jpg') no-repeat center center / cover
		color #fff
		position relative

		display flex
		flex-direction column

		&__titulo
			text-align center
			font-size 46px
			font-family f-bbold
			text-shadow -4px 4px 0 rgba(0, 0, 0, 0.42)
			position resize
			z-index 2

			flex 1
			display flex
			flex-direction column

			img
				flex none
				width fit-content

			&__logo-1
				margin-bottom 30px
				max-width 166px

			&__strong
				margin-top auto

			&__logo-2
				margin 20px auto 0

		&__video
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			object-fit cover
			object-position center
			z-index 1

	&__medidas__blog
		background-color volverAmarillo

		&__articulos
			margin-bottom 40px
			display flex
			justify-content space-between
			flex-wrap wrap

		&__articulo
			background-color #fff
			box-shadow 0 2px 6px rgba(0,0,0,.15)
			border-radius 8px
			height 340px
			overflow hidden
			margin-bottom 20px
			position relative

			width calc(50% - 10px)

			display flex
			flex-direction column

			&:nth-child(1), &:nth-child(2)
				width calc(25% - 20px)
				.volver__medidas__blog__image
					height 130px

		&__etiqueta
			background-color morado
			color #fff
			font-size 10px
			height 22px
			display inline-flex
			align-items center
			position absolute
			top 10px
			left 10px
			padding 0 10px

		&__image
			height 170px
			img
				width 100%
				height 100%
				object-fit cover

		&__contenido
			padding 20px 15px
			flex 1

			display flex
			flex-direction column
			align-items flex-start

			.volver__link-rojo
				margin-top auto

		&__titulo
			font-family f-bbold
			font-size 14px
			margin-bottom 5px

		&__fecha
			font-size 10px
			margin-bottom 13px
			color #bcbbbb

		&__texto
			font-size 10px
			line-height 1.6

			display -webkit-box
			max-width 100%
			-webkit-line-clamp 4
			-webkit-box-orient vertical
			overflow hidden
			text-overflow ellipsis

		&__iconos
			display flex
			justify-content space-between
			flex-wrap wrap

			&:after
				content ''
				display flex
				// flex auto
				width calc(33.3% - 35px )

		&__icono
			font-size 18px
			font-family f-bbold
			// max-width 330px
			width calc(33.3% - 35px )
			height 86px
			background-color #fff
			padding 15px
			border-radius 11px
			box-shadow 4px 3px 7px -3px rgba(0, 0, 0, 0.25), 1px 2px 6px 0 #f7b500
			margin-bottom 30px
			transition all ease 0.25s

			display flex
			align-items center

			&:hover
				transform translate(0, -5px)
				box-shadow 0px 3px 7px -3px rgba(0, 0, 0, 0.9), 0px 2px 6px 0 #f7b500

			img
				margin-right 15px

			&.m--morado
				color morado
			&.m--celeste
				color #51b8ae
			&.m--verde
				color #4eb700
			&.m--azul
				color #0071bc
			&.m--rojo
				color #e13b3d
			&.m--amarillo
				color #f7b500
			&.m--naranja
				color #e87a14

		@media ( max-width 1000px )

			&__articulo
				width calc(50% - 5px)
				margin-bottom 10px

				&:nth-child(1), &:nth-child(2)
					width calc(25% - 10px)

			&__iconos
				&:after
					width calc(33.3% - 10px )
			&__icono
				width calc(33.3% - 10px )
				margin-bottom 15px

		@media ( max-width 719px )

			&__image
				height 130px

			&__articulo
				width 100%
				height 300px
				margin-bottom 10px

				&:nth-child(1), &:nth-child(2)
					width calc(50% - 5px)

			&__texto
				-webkit-line-clamp 3

			&__iconos
				&:after
					width calc(50% - 10px )
			&__icono
				width calc(50% - 10px )
				margin-bottom 15px

		@media ( max-width 580px )

			&__articulo

				&:nth-child(1), &:nth-child(2)
					width 100%


		@media ( max-width 560px )
				&__iconos
					&:after
						display none
				&__icono
					width 100%
					margin-bottom 15px
					&:last-child
						margin-bottom 0

		@media ( max-width 500px )

			&__texto
				-webkit-line-clamp 2

	&__reactivacion
		background-color volverVerde
		.boton
			margin 0 5px
		&__cards
			display flex
			margin 0 20px

			&-container
				display flex
				align-items center
				// padding 0 50px
				// position relative

			&__flecha
				width 27px
				height 27px
				background url('../images/vamosavolver/flecha-slider.png')
				border-radius 50%
				cursor pointer
				border 0
				outline 0
				flex none

				&.m--rotate180
					transform rotate(180deg)

		&__card
			display block
			width 290px
			height 170px
			border-radius 12px
			overflow hidden

			&:hover
				.volver__reactivacion__card__image img
					opacity 0.6
					transform scale(1.1)
				.volver__reactivacion__card__titulo
					color #fff
					background-color morado

			&__image
				width 100%
				height 130px
				background-color #000
				overflow hidden
				img
					width 100%
					height 100%
					object-fit cover
					transition all ease .25s

			&__titulo
				display block
				background-color #fff
				height 40px
				line-height 40px
				font-family f-bbold
				color morado
				text-align center
				font-size 17px
				transition all ease .25s

		&__texto
			color #fff
			font-size 16px
			text-align center
			padding 30px 0 15px 0

		@media ( max-width 700px )

			.boton-contenedor
				flex-direction column
			.boton
				margin 0 0 10px
				&:last-child
					margin-bottom 0


	&__titulo-tipo2
		color #636363
		font-size 36px
		text-align center
		font-family f-bbold
	&__resumen
		font-size 18px
		font-family f-news
		text-align center
		padding 16px 0 55px

	&__casa

		&__cards
			display flex
			flex-wrap wrap
			justify-content space-between

		&__card
			display flex
			width calc(25% - 12px)
			min-height 270px
			color #fff
			border-radius 6px
			overflow hidden
			margin-bottom 15px

			position relative

			&:first-child, &:last-child
				width calc(50% - 8px)

			&:hover
				.volver__casa__card__image
					img
						opacity 0.7
						transform scale(1.05)

			&__image
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				z-index 1
				background-color #000
				overflow hidden
				img
					width 100%
					height 100%
					object-fit cover
					transition all ease 0.25s

			&__contenido
				position relative
				z-index 2
				padding 20px 15px
				display flex
				flex-direction column
				align-items flex-start

			&__titulo
				font-size 22px
				line-height 1.3
				font-family f-bold
				max-width 400px
				margin-bottom auto
				padding-bottom 20px


		@media ( max-width 860px )

			&__card
				width calc( 50% - 8px )
				min-height 240px
				&:first-child, &:last-child
					width 100%


		@media ( max-width 500px )

			&__card
				width 100%
				min-height 200px

	&__box
		padding-top 80px

		&__titulo
			font-size 28px
			font-family f-bbold
			margin 0 auto 25px
			max-width 460px

			display flex
			justify-content center
			align-items center

			img
				margin-right 15px

			&.m--morado
				color morado
			&.m--celeste
				color #51b8ae
			&.m--verde
				color #4eb700
			&.m--azul
				color #0071bc
			&.m--rojo
				color #e13b3d
			&.m--amarillo
				color #f7b500
			&.m--naranja
				color #e87a14

		&__subtitulo
			color #6d7278
			font-size 22px
			font-family f-bbold
			text-align center
			display block
			max-width 600px
			margin 0 auto 15px

		&__resumen
			font-size 13px
			color #6d7278
			text-align center
			display block
			font-family f-news
			margin-bottom 25px

		&__acordeon

			&__titulo
				color #fff
				background-color verde
				display block
				padding 15px 20px
				border-radius 8px
				font-size 17px
				font-family f-bold
				letter-spacing 1px

			&__contenido
				display block
				padding 20px 10px 40px
				white-space wrap
				a
					color morado
					font-size 14px
					font-family f-bold
					line-height 1.6
					text-decoration underline
					display inline-block
					margin-bottom 8px
					&:hover
						text-decoration none
					&:last-child
						margin-bottom 0
				img
					width 100%
				&:last-child
					padding-bottom 0

		@media ( max-width 600px )

			&__titulo
				font-size 24px
				flex-direction column
				img
					margin 0 0 10px

			&__subtitulo
				font-size 18px
