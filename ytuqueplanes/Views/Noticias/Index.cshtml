
@{
    ViewBag.Title = "Index";
}


<section class="page__header m--bg-black" style="background-image: url('/assets/images/rutas-cortas-1.jpg');">
    <div class="limit page__header__inset">
        <a href="/" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver.svg" alt=""><span>Volver a inicio</span></a>
        <h2 class="page__header__titulo">Noticias</h2>
    </div>
</section>
<main class="seccion m--top">
    <section class="seccion m--grilla-poster m--noticias">
        <div class="limit">
            <div class="swiper-container seccion__slider-morado fnSliderMorado">
                <div class="swiper-wrapper">
                    @foreach (ytuqueplanes.Models.Noticia item in Model.slides)
                    {
                        <div class="swiper-slide">
                            <article class="seccion__slider-morado__article">
                                <figure class="seccion__slider-morado__imagen">
                                    <img src="@ViewBag.hostStaticUrl@item.imagen" alt="">
                                </figure>
                                <div class="seccion__slider-morado__contenido">
                                    <strong class="seccion__slider-morado__subtitulo">@item.categoria</strong>
                                    <h2 class="seccion__slider-morado__titulo">@item.titulo</h2>
                                    <div class="seccion__slider-morado__texto"> @Html.Raw(item.contenido)</div>
                                  <!--
                                    <cite class="seccion__slider-morado__cita"><strong>De infotur.com</strong> / 25 de agost, 2020</cite>
                               -->
                                </div>
                            </article>
                        </div>
                    }
                    </div>
                <div class="seccion__slider-morado__nav">
                    <div class="seccion__slider-morado__nav__atras">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                    </div>
                    <div class="seccion__slider-morado__nav__posicion"><span class="fnNumSlider">1</span>/3</div>
                    <div class="seccion__slider-morado__nav__adelante">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
            <strong class="destinos__subtitulo">Historial de noticias</strong>
            <strong class="destinos__subtitulo-mobile">Mostrar destinos</strong>
            <div class="filtro-selector" data-target="#fnTargetFiltroGrilla">
                <div class="boton m--filtro m--morado m--grande filtro-selector__boton -activo- fnFiltrarGrilla" data-filtro="">
                    <strong>Todos</strong>
                </div>
                <div class="boton m--filtro m--morado m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Turismo">
                    <strong>Turismo</strong>
                </div>
                <div class="boton m--filtro m--morado m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Política">
                    <strong>Política</strong>
                </div>
                <div class="boton m--filtro m--morado m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Comunidad">
                    <strong>Comunidad</strong>
                </div>
                <div class="boton m--filtro m--morado m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Empresas">
                    <strong>Empresas</strong>
                </div>
                <div class="boton m--morado m--grande filtro-selector__select-ui">
                    <strong class="filtro-selector__select-ui__contenido fnTargetSelect">Todos</strong>
                    <select class="filtro-selector__select-ui__select fnSelect fnFiltrarGrilla">
                        <option value="">Todos</option>
                        <option value="Turismo" data-filtro="Turismo">Turismo</option>
                        <option value="Política" data-filtro="Política">Política</option>
                        <option value="Comunidad" data-filtro="Comunidad">Comunidad</option>
                        <option value="Empresas" data-filtro="Empresas">Empresas</option>
                    </select>
                </div>
            </div>

            <div id="fnTargetFiltroGrilla" class="seccion__grilla -mostrar-todos- -mas-3- -mas-6-">
                <div class="seccion__grilla__bloques">

                    @foreach (ytuqueplanes.Models.Noticia item in Model.listado) {
                    <article class="card-info m--tipo7" data-filtro="@item.categoria">
                        <img src="@ViewBag.hostStaticUrl@item.imagen" alt="" class="card-info__imagen">
                        <header class="card-info__header">
                            <strong class="card-info__empresas">@item.categoria</strong>
                            <h1 class="card-info__titulo">@item.titulo</h1>
                        </header>
                        <div class="card-info__texto">@Html.Raw(item.contenido)</div>
                        <!--<aside class="card-info__last">
                            De: <a href="#">infotur.com</a><br>
                            17 de setiembre, 2020
                        </aside>-->
                    </article>
                    }

                </div>
                <div class="boton-contenedor">
                    <div class="boton m--verde-hoja m--grande fnFiltrarGrillaTodo" data-target="#fnTargetFiltroGrilla"><strong>Ver más</strong></div>
                </div>
            </div>
        </div>
    </section>
</main>



