
@{
    ViewBag.Title = "Index";
}
<!-- Resultado de busqueda -->
<div class="page__header m--limpio m--resultados">
    <div class="limit page__header__inset">
        <a href="/" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver-verde.svg" alt=""><span>Volver a Inicio</span></a>
        <aside id="buscador-principal" class="buscador-principal m--resultados">
            <form class="buscador-principal__form">
                <input type="text" placeholder="¿Necesitas información sobre algo?" name="s" class="buscador-principal__input">
                <button type="submit" class="buscador-principal__boton">></button>
            </form>
            <strong class="buscador-principal__subtitulo">Lo más buscado por los viajeros</strong>
            <p class="buscador-principal__tags">
                <a href="#">Churín</a> <a href="#">Tarapoto</a> <a href="#">Lunahuaná</a> <a href="#">Huaraz</a> <a href="#">Iquitos</a>
            </p>
        </aside>
    </div>
</div>

<main class="seccion m--no-top">

    <section class="seccion m--slider-standard">
        <div class="limit">
            <h3 class="seccion__titulo m--left">Destinos (12)</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                    @for (var i = 0; i < 4; i++)
                    {
                        <div class="swiper-slide">
                            <article class="card-poster m--tipo3">
                                <img src="/assets/images/rutas-cortas-10.jpg" alt="" class="card-poster__imagen">
                                @* <aside class="corazon m--blanco card-poster__corazon"><i class="fa fa-heart" aria-hidden="true"></i>0</aside> *@
                                <header class="card-poster__header">
                                    <h1 class="card-poster__titulo">Norte</h1>
                                </header>
                                <a href="destinos-interna.html" class="card-poster__mas-informacion">Más información</a>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="boton-contenedor m--padding-top">
                <a class="boton m--amarillo m--mediano" href="/destinos"><strong>Ver más</strong></a>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard">
        <div class="limit">
            <h3 class="seccion__titulo m--left">Rutas cortas (8)</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                    @for (var i = 0; i < 4; i++)
                    {
                        <div class="swiper-slide">
                            <article class="card-poster m--tipo4">
                                <img src="/assets/images/rutas-cortas-9.jpg" alt="" class="card-poster__imagen">
                                @* <aside class="corazon m--blanco card-poster__corazon"><i class="fa fa-heart" aria-hidden="true"></i>3</aside> *@
                                <header class="card-poster__header">
                                    <h1 class="card-poster__titulo">Lima</h1>
                                </header>
                                <a href="rutas-cortas-interna.html" class="card-poster__mas-informacion">Más información</a>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="boton-contenedor m--padding-top">
                <a class="boton m--amarillo m--mediano" href="/rutas-cortas"><strong>Ver más</strong></a>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard">
        <div class="limit">
            <h3 class="seccion__titulo m--left">Notas (13)</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                    @for (var i = 0; i < 24; i++)
                    {
                        <div class="swiper-slide">
                            <article class="card-info m--tipo2">
                                <img src="assets/images/rutas-cortas-10.jpg" alt="" class="card-info__imagen">
                                <header class="card-info__header">
                                    <address class="card-info__ubicacion"><i class="fa fa-map-marker" aria-hidden="true"></i>Moquegua</address>
                                    <aside class="corazon"><i class="fa fa-heart" aria-hidden="true"></i>10</aside>
                                    <h1 class="card-info__titulo">Trekking en z - El Baúl de Antonia</h1>
                                </header>
                                <a href="#" class="card-info__mas-informacion">Más información</a>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="boton-contenedor m--padding-top">
                <a class="boton m--amarillo m--mediano" href="/blog-viajero"><strong>Ver más</strong></a>
            </div>
        </div>
    </section>

</main>
