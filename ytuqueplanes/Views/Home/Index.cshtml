    <section class="seccion m--slider-horizontal">
        <div class="limit seccion__inset">
            <article class="seccion__contenido">
                <h2 class="seccion__titulo">¿No sabes a dónde ir?</h2>
                <p class="seccion__resumen">Descubre nuevas ideas de viaje gracias a las recomendaciones de nuestros viajeros.</p>
                <a href="/blog-viajero" class="boton m--verde-hoja m--grande m--235"><strong>Ir al Blog</strong></a>
            </article>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                 @foreach (ytuqueplanes.Models.Blog blog in Model.notas) {
                    <div class="swiper-slide">
                        <article class="card-info m--tipo1">
                            <img src="@ViewBag.hostStaticUrl@blog.thumb" alt="" class="card-info__imagen">
                            <header class="card-info__header">
                                <address class="card-info__ubicacion"><i class="fa fa-map-marker" aria-hidden="true"></i>@blog.provincia</address>
                               <!-- <aside class="corazon"><i class="fa fa-heart" aria-hidden="true"></i>10</aside>-->
                                <h1 class="card-info__titulo">@blog.titulo</h1>
                            </header>
                            <a href="/blog-viajero/@blog.provincia_slug/@blog.slug" class="card-info__mas-informacion">Más información</a>
                        </article>
                    </div>
                  }
                </div>
            </div>
            <div class="destinos__detalle__slider__flecha m--left fnSliderDestinosDetalle__left free-1__left"></div>
            <div class="destinos__detalle__slider__flecha m--right fnSliderDestinosDetalle__right free-1__right"></div>
            <a href="/blog-viajero" class="boton m--verde-hoja m--grande seccion__boton-mobile"><strong>Ir al Blog</strong></a>
        </div>
    </section>


    <section class="seccion">
        <div class="limit">
            <article class="card-full" style="background-image: url('/assets/images/rutas-cortas-1.jpg');">
                <header><h1 class="card-full__titulo">Rutas cortas</h1></header>
                <p class="card-full__contenido">Una buena experiencia turística puede estar cerca de ti.</p>
                <a href="/rutas-cortas" class="boton m--grande m--morado m--padding-pequeno"><strong>Ver rutas</strong></a>
            </article>
        </div>
    </section>

    <section class="seccion m--slider-grilla">
        <div class="limit section__inset">
            <h4 class="seccion__titulo">Festivales y eventos</h4>
            <div class="swiper-container seccion__slider fnSliderGrilla">
                <div class="swiper-wrapper">
                    @foreach (ytuqueplanes.Models.Festividad festividad in Model.festividades) {
                        <div class="swiper-slide">
                            <article class="card-info m--tipo3">
                                <img src="@ViewBag.hostStaticUrl@festividad.thumb" alt="" class="card-info__imagen">
                                <header class="card-info__header">
                                    <address class="card-info__ubicacion"><i class="fa fa-map-marker" aria-hidden="true"></i>@festividad.provincia</address>
                                    <aside class="corazon"><i class="fa fa-heart" aria-hidden="true"></i>1</aside>
                                    <h1 class="card-info__titulo">@festividad.nombre</h1>
                                    <aside class="card-info__fecha">@festividad.inicio @festividad.mes</aside>
                                </header>
                                <a href="/festividades/detalle/@festividad.slug" class="card-info__mas-informacion">Más información</a>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="boton-contenedor">
                <a href="/festividades" class="boton m--morado m--grande m--padding-pequeno"><strong>Ver calendario de festividades</strong></a>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard m--tipo7">
        <div class="limit">
            <h3 class="seccion__titulo">Últimas noticias</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">

                    @foreach (ytuqueplanes.Models.Noticia item in Model.noticias)
                    {
                        <div class="swiper-slide">
                            <article class="card-info m--tipo7">
                                <img src="@ViewBag.hostStaticUrl@item.imagen" alt="" class="card-info__imagen">
                                <header class="card-info__header">
                                    <strong class="card-info__empresas">@item.categoria</strong>
                                    <h1 class="card-info__titulo">@item.titulo</h1>
                                </header>
                                <p class="card-info__texto">@Html.Raw(item.contenido)</p>
                                <!--<aside class="card-info__last">
                                    De: <a href="#">Gestiónm</a><br>
                                    17 de setiembre, 2020
                                </aside>-->
                            </article>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </section>

