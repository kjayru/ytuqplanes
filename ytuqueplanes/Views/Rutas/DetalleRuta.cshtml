                            {"Caminos al norte", "historia", "5"},
                            {"Aventuras sureñas", "viajes historia", "6"},
                            {"Aventuras pétreas", "vivencial", "7"},
                            {"Puerto histórico", "descanso", "8"},
                            {"Playas de Áncash", "naturaleza viajes", "9"},
