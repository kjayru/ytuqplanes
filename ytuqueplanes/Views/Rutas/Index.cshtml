@model dynamic
@{
    ViewBag.Title = "Rutas";
    @* @ObjectInfo.Print(ViewBag); *@
}

    <section class="page__header" style="background-image: url('@ViewBag.imagen_lg');">
        <div class="limit page__header__inset">
            <a href="/" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver.svg" alt=""><span>Volver a inicio</span></a>
            <h2 class="page__header__titulo">@ViewBag.titulo</h2>
        </div>
    </section>

<main class="seccion">

    <section class="seccion m--grilla-poster">
        <div class="limit">
            <div class="rutas-cortas__buscador" data-target="#fnTargetFiltroGrilla">
                <h2 class="rutas-cortas__buscador__titulo">¡Que empiece la aventura!</h2>
                <p class="rutas-cortas__buscador__resumen">La Guía de Rutas Cortas es el primer paso para descubrir los lugares más hermosos de las 25 regiones del Perú. En esta sección encontrarás información que iremos compartiendo progresivamente para que disfrutes tu próximo viaje de forma segura y responsable, muy cerca de ti.</p>
                <form class="rutas-cortas__buscador__form">
                    <input id="inputSearchRutasCortas" type="text" class="rutas-cortas__buscador__form__input">
                    @* <button type="submit" class="rutas-cortas__buscador__form__boton">Enviar</button> *@
                    <img src="/assets/images/lupa-negra.svg" alt="" width="20" class="rutas-cortas__buscador__form__lupa">
                </form>
            </div>
            <div id="fnTargetFiltroGrilla" class="seccion__grilla -mostrar-todos- -mas-8-">
                <div class="seccion__grilla__bloques">
                    @* @foreach (ytuqueplanes.Models.RutaProvincia prov in Model.provincias)
                    {
                        <article class="card-poster m--tipo4" data-filtro="Arequipa">
                            <img src="@prov.provincia_thumb" alt="" class="card-poster__imagen">
                            <!-- <aside class="corazon m--blanco card-poster__corazon"><i class="fa fa-heart" aria-hidden="true"></i>0</aside>-->
                            <header class="card-poster__header">
                                <h1 class="card-poster__titulo">@prov.provincia_nombre</h1>
                            </header>
                            <a href="/rutas-cortas/@prov.provincia_slug" class="card-poster__mas-informacion">Más información</a>
                        </article>
                    } *@
                    @{
                        var deps= new string[,] {
                            {"Amazonas", "amazonas", "norte", "1"},
                            {"Áncash", "ancash", "centro", "2"},
                            {"Apurímac", "apurimac", "sur", "3"},
                            {"Arequipa", "arequipa", "sur", "4"},
                            {"Ayacucho", "ayacucho", "sur", "5"},
                            {"Cajamarca", "cajamarca", "norte", "6"},
                            {"Cusco", "cusco", "sur", "7"},
                            {"Huancavelíca", "huancavelica", "centro", "8"},
                            {"Huánuco", "huanuco", "centro", "9"},
                            {"Ica", "ica", "centro", "10"},
                            {"Junín", "junin", "centro", "1"},
                            {"La Libertad", "la-libertad", "norte", "2"},
                            {"Lambayeque", "lambayeque", "norte", "3"},
                            {"Lima", "lima", "centro", "4"},
                            {"Loreto", "loreto", "norte", "5"},
                            {"Madre De Dios", "madre-de-dios", "sur", "6"},
                            {"Moquegua", "moquegua", "sur", "7"},
                            {"Pasco", "pasco", "centro", "8"},
                            {"Piura", "piura", "norte", "9"},
                            {"Puno", "puno", "sur", "10"},
                            {"San Martín", "san-martin", "norte", "1"},
                            {"Tacna", "tacna", "sur", "2"},
                            {"Tumbes", "tumbes", "norte", "3"},
                            {"Ucayali", "ucayali", "centro", "4"}
                        };
                        var depsSize = (deps.Length/4)-1;
                    }
                    @for(var i=0; i<=depsSize; i++){
                        <article class="card-poster m--tipo4" data-filtro="@deps[i, 2] @deps[i, 1]">
                            <img src="/assets/images/rutas-cortas-@(deps[i, 3]).jpg" alt="" class="card-poster__imagen">
                            <!-- <aside class="corazon m--blanco card-poster__corazon"><i class="fa fa-heart" aria-hidden="true"></i>0</aside>-->
                            <header class="card-poster__header">
                                <h1 class="card-poster__titulo">@deps[i, 0]</h1>
                            </header>
                            <a href="/rutas-cortas/amazonas" class="card-poster__mas-informacion">Más información</a>
                        </article>
                    }
                </div>
                <div class="boton-contenedor">
                    <div class="boton m--amarillo m--grande fnFiltrarGrillaTodo" data-target="#fnTargetFiltroGrilla"><strong>Ver más</strong></div>
                </div>
                <aside class="seccion__slider__sin-resultados">No se hallaron resultados</aside>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard">
        <div class="limit">
            <h3 class="seccion__titulo">Mira las rutas destacadas del mes</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
