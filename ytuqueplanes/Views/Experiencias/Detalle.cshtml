
@{
    ViewBag.Title = "Detalle";
}


<div class="page__header m--limpio">
    <div class="limit page__header__inset">
        <a href="/festividades" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver-verde.svg" alt=""><span>Volver a Festividades</span></a>
    </div>
</div>

<main class="seccion m--no-top">

    <section class="seccion">
        <div class="limit">
            <div class="destinos__festividad-detalle">
                <img src="@ViewBag.hostStaticUrl@ViewBag.imagen" alt="" class="destinos__festividad-detalle__imagen">
                <div class="destinos__festividad-detalle__contenido">
                    <article class="destinos__detalle">
                        <header class="destinos__detalle__header">
                            <address class="destinos__detalle__lugar"><i class="fa fa-map-marker" aria-hidden="true"></i> @ViewBag.provincia</address>
                            <h2 class="destinos__detalle__titulo">@ViewBag.nombre</h2>
                            <time class="destinos__detalle__fecha">@ViewBag.mes_id de @ViewBag.mes</time>
                        </header>
                        @Html.Raw(ViewBag.contenido)
                        <!--<aside class="destinos__detalle__tags">
                            <strong>Tag 1</strong>
                            <strong>Tag 2</strong>
                            <strong>Tag 3</strong>
                            <strong>Tag 4</strong>
                        </aside>-->
                    </article>
                    <div class="destinos__detalle__footer">
                        <!--<strong class="destinos__detalle__me-gusta">
                            <span>
                                <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                            </span>
                        </strong>-->
                        <a href="#" class="destinos__detalle__redes m--facebook fnShareFacebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="#" target="_blank" class="destinos__detalle__redes m--twitter fnShareTwitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href="#" target="_blank" class="destinos__detalle__redes m--wsp fnShareWsp"><i class="fa fa-whatsapp" aria-hidden="true"></i></a>
                    </div>
                    @if(ViewBag.documento!=null){
                    <a href="@ViewBag.hostStaticUrl@ViewBag.documento" download="download" class="boton m--grande m--morado m--padding-pequeno"><strong>Descargar cronograma</strong></a>
                    }
                </div>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard m--tipo2">
        <div class="limit">
            <h3 class="seccion__titulo m--center">Ofertas similares</h3>
            <div class="swiper-container seccion__slider fnSliderFree" data-api-tipo="card-poster-tipo-2"
                data-api-data="{'type[]': 'package', 'limit': '5'}">
                <div class="swiper-wrapper"></div>
            </div>
        </div>
    </section>

</main>
