    <section class="seccion m--slider-horizontal">
        <div class="limit seccion__inset">
            <article class="seccion__contenido">
                <h2 class="seccion__titulo">¡Próximamente!</h2>
                <p class="seccion__resumen">Los viajes por el Perú aún no se han reactivado. Más adelante tendremos las mejores ofertas y tours</p>
                <div class="boton m--verde m--grande m--235"><strong>Muy pronto</strong></div>
            </article>
            <div class="swiper-container seccion__slider fnSliderFree" data-api-tipo="card-poster-tipo-1" data-api-data="{'type[]': 'package', 'limit': '3'}">
                <div class="swiper-wrapper"></div>
            </div>
            <div class="boton m--amarillo mverde m--235 seccion__boton-mobile"><strong>Ver todas las ofertas</strong></div>
        </div>
    </section>

    <section class="seccion m--bg-tramado m--slider-standard m--festividades">
        <div class="limit section__inset">
            <h4 class="seccion__titulo">Festivales y eventos</h4>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                    @foreach (ytuqueplanes.Models.Festividad festivo in Model.festividades)
                    {
                        <div class="swiper-slide">
                            <article class="card-info m--tipo3">
                                <img src="@festivo.imagen" alt="@festivo.nombre" class="card-info__imagen">
                                <header class="card-info__header">
                                    <address class="card-info__ubicacion"><i class="fa fa-map-marker" aria-hidden="true"></i>@festivo.provincia</address>
                                    <aside class="corazon"><i class="fa fa-heart" aria-hidden="true"></i>1</aside>
                                    <h1 class="card-info__titulo">@festivo.nombre</h1>
                                    <aside class="card-info__fecha">@festivo.mes_id @festivo.mes</aside>
                                </header>
                                <a href="/festividades/detalle/@festivo.slug" class="card-info__mas-informacion">Más información</a>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="boton-contenedor">
                <a href="/festividades" class="boton m--morado m--grande m--padding-pequeno"><strong>Ver calendario de festividades</strong></a>
            </div>
        </div>
    </section>

    <section class="seccion m--slider-standard">
        <div class="limit">
            <h3 class="seccion__titulo">Te puede interesar</h3>
            <div class="swiper-container seccion__slider fnSliderFree">
                <div class="swiper-wrapper">
                    @foreach (ytuqueplanes.Models.Destacado destacado in Model.destacados)
                    {

                        <div class="swiper-slide">
                            <article class="card-info m--tipo2">
                                <img src="@destacado.imagen" alt="@destacado.titulo" class="card-info__imagen">
                                <header class="card-info__header">
                                    <address class="card-info__ubicacion"><i class="fa fa-map-marker" aria-hidden="true"></i>@destacado.provincia</address>
                                    <!--<aside class="corazon"><i class="fa fa-heart" aria-hidden="true"></i>10</aside>-->
                                    <h1 class="card-info__titulo">@destacado.titulo</h1>
                                </header>
                                <a href="/destinos/@destacado.provincia_slug/@destacado.destino_slug/@destacado.slug" class="card-info__mas-informacion">Más información</a>
                            </article>
                        </div>

                    }
                </div>
            </div>
        </div>
    </section>

</main>