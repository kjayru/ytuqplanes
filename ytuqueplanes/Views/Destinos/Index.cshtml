@model dynamic
@{
    ViewBag.Title = "Index";
    string grillaInicial = Model.provincias.Count>4?"-mas-4-":"";
    grillaInicial = Model.provincias.Count>6?"-mas-4- -mas-6-":grillaInicial;
    grillaInicial = Model.provincias.Count>8?"-mas-4- -mas-6- -mas-8-":grillaInicial;
    @* @ObjectInfo.Print(grillaInicial); *@
}

@foreach (ytuqueplanes.Models.Slide slide in Model.sliders)
{

    <section class="page__header m--bg-black" style="background-image: url('@ViewBag.hostStaticUrl@slide.imagen_lg');">
        <div class="limit page__header__inset">
            <a href="/" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver.svg" alt=""><span>Volver a inicio</span></a>
            <h2 class="page__header__titulo">@slide.titulo</h2>
            <p class="page__header__resumen">@slide.descripcion</p>
        </div>
    </section>
}
<main class="seccion">

    <section class="seccion m--grilla-poster">
        <div class="limit">
            <div class="filtro-selector" data-target="#fnTargetFiltroGrilla">
                <div class="boton m--filtro m--grande filtro-selector__boton -activo- fnFiltrarGrilla" data-filtro="">
                    <strong>Todos</strong>
                </div>
                <div class="boton m--filtro m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Norte">
                    <strong>Norte</strong>
                </div>
                <div class="boton m--filtro m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Centro">
                    <strong>Centro</strong>
                </div>
                <div class="boton m--filtro m--grande filtro-selector__boton fnFiltrarGrilla" data-filtro="Sur">
                    <strong>Sur</strong>
                </div>
                <div class="boton m--verde m--grande filtro-selector__select-ui">
                    <strong class="filtro-selector__select-ui__contenido fnTargetSelect">Todos</strong>
                    <select class="filtro-selector__select-ui__select fnSelect fnFiltrarGrilla">
                        <option value="">Todos</option>
                        <option value="Norte" data-filtro="Norte">Norte</option>
                        <option value="Centro" data-filtro="Centro">Centro</option>
                        <option value="Sur" data-filtro="Sur">Sur</option>
                    </select>
                </div>
            </div>

            <div id="fnTargetFiltroGrilla" class="seccion__grilla -mostrar-todos- @grillaInicial">
                <div class="seccion__grilla__bloques">

                    @foreach (ytuqueplanes.Models.Provincias provincia in Model.provincias)
                    {

                    <article class="card-poster m--tipo3" data-filtro="@provincia.region">
                        <img src="@ViewBag.hostStaticUrl@provincia.thumb" alt="" class="card-poster__imagen">
                        <!--<aside class="corazon m--blanco card-poster__corazon"><i class="fa fa-heart" aria-hidden="true"></i>0</aside>-->
                        <header class="card-poster__header">
                            <h1 class="card-poster__titulo">@provincia.nombre</h1>
                        </header>
                        <a href="/destinos/@provincia.slug" class="card-poster__mas-informacion">Más información</a>
                    </article>

                    }

                </div>
                <div class="boton-contenedor">
                    <div class="boton m--amarillo m--grande fnFiltrarGrillaTodo" data-target="#fnTargetFiltroGrilla"><strong>Ver más</strong></div>
                </div>
            </div>
        </div>
    </section>

