@model dynamic

    @{
        ViewBag.Title = "DestinoProvincia";
    }

<section class="page__header  m--bg-black" style="background-image: url('@ViewBag.hostStaticUrl@ViewBag.imagen');">
    <div class="limit page__header__inset">
        <a href="/destinos/@ViewBag.provinciaSlug" class="page__header__miga-de-pan"><img src="/assets/images/flecha-volver.svg" alt=""><span>Volver a @ViewBag.provincia</span></a>
        <h2 class="page__header__titulo">@ViewBag.titulo</h2>
        <p class="page__header__resumen">@ViewBag.contenido</p>
    </div>
</section>

    <main class="seccion">

        <section id="destinosNivel3" class="seccion destinos-nivel3__listado @(Model.atractivos.Count>4?"-activo-":"")">
            @foreach (ytuqueplanes.Models.Atractivo atractivo in Model.atractivos)
            {

                <article class="card-info m--tipo5">
                    <figure>
                        <img src="@ViewBag.hostStaticUrl@atractivo.thumb" alt="" class="card-info__imagen" loading="lazy">
                    </figure>
                    <div class="card-info__contenido">
                        <header class="card-info__header">
                            <h1 class="card-info__titulo">@atractivo.titulo</h1>
                        </header>
                        <p class="card-info__resumen">@atractivo.resumen</p>
                        <a href="/destinos/@ViewBag.provinciaSlug/@ViewBag.slug/@atractivo.slug" class="card-info__leer-mas">[+] Leer más</a>
                    </div>
                </article>
            }
            <div class="boton-contenedor">
                <div class="boton m--amarillo m--grande fnToggleClass" data-targets="#destinosNivel3"><strong>Ver más</strong></div>
            </div>

        </section>

       
        
    
